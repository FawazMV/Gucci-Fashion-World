<!-- ***** Preloader Start ***** -->
<div id="preloader">
  <div class="jumper">
    <div></div>
    <div></div>
    <div></div>
  </div>
</div>
<!-- ***** Preloader End ***** -->



<!-- ***** Main Banner Area Start ***** -->
<div class="main-banner" id="top">
  <div class="container-fluid">
    <div class="row">


      <div class="col-lg-6">
        <div class="left-content">
          <div class="thumb">
            <div class="inner-content">
              <h4>We Are Hexashop</h4>
              <span>Create your own fashion &amp; Enjoy your shopping</span>
              <div class="main-border-button">
                <a href="/allProduct">Purchase Now!</a>
              </div>
            </div>
            <img src="assets/images/left-banner-image.jpg" alt="">
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="right-content">
          <div class="row">
            <% for( let a=0; a < catagories.length; a++ ) { %>

            <div class="col-lg-6">
              <div class="right-first-image">
                <div class="thumb">
                  <div class="inner-content">
                    <h4>
                      <%=catagories[a].gender %>
                    </h4>
                    <span>Best Clothes For <%= catagories[a].gender %> </span>
                  </div>
                  <div class="hover-content">
                    <div class="inner">
                      <h4>
                        <%= catagories[a].gender %>
                      </h4>
                      <!-- <p>Lorem ipsum dolor sit amet, conservisii ctetur adipiscing elit incid.
                                                </p> -->
                      <div class="main-border-button">
                        <a href="/product/<%= catagories[a].gender %>">Discover More</a>
                      </div>
                    </div>
                  </div>
                  <img src="<%= catagories[a].image[0].Location %> ">
                </div>
              </div>
            </div>

            <% } %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Men Area Starts ***** -->
<% for( let k=0; k < Products.length; k++ ) { %>
<section class="section" id="men">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="section-heading">
          <h2>
            <%= locals.Products[k][0].gender.gender %>'s Latest
          </h2>
          <span>Details to details is what makes Hexashop different from the other themes.</span>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="men-item-carousel">
          <div class="owl-men-item owl-carousel">
            <% for( let i=0; i < Products[k].length; i++ ) { %>
            <div class="item">
              <div class="thumb">
                <div class="hover-content">
                  <ul>
                    <li><a href="/singelProduct/<%= Products[k][i]._id %> "><i class="fa fa-eye"></i></a></li>
                    <li><a onclick="addtoWishlist('<%= Products[k][i]._id %>')"><i class="fa fa-star"></i></a></li>
                    <li><a onclick="addtocart('<%= Products[k][i]._id %>')"><i class="fa fa-shopping-cart"></i></a>
                    </li>
                  </ul>
                </div>
                <img src="<%= Products[k][i].imagesDetails[0].Location %> " alt="">
              </div>
              <div class="down-content">
                <h4>
                  <%= Products[k][i].brandName.brandName %>
                </h4>
                <span> â‚¹<%= Products[k][i].shopPrice %>.00</span>
                <ul class="stars">
                  <% for( let j = 0; j < Products[k][i].rating/20; j++ ) { %>
                  <li><i class="fa fa-star"></i></li>
                  <% } %>
                </ul>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ***** Men Area Ends ***** -->
<% } %>


<script>
  addtocart = (id) => {
    try {
      axios.post('/addCart', {
        id: id
      }).then((e) => {
        if (e.data.response === "login") location.href = "/login"
        else if (e.data.response) {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Sorry, ' + e.data.response
          })
        } else {
          Swal.fire({
            icon: 'success',
            title: 'Product added to cart',
            showConfirmButton: false,
            timer: 700
          })
        }
      })
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Sorry,' + error.message
      })
    }
  }



  addtoWishlist = (id) => {
    try {
      axios.put('/addWhishlist', {
        id: id
      }).then((e) => {
        if (e.data.response === "login") location.href = "/login"
        else if (e.data.response) {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Sorry, ' + e.data.response
          })
        } else {
          Swal.fire({
            icon: 'success',
            title: 'Product added to wishlist',
            showConfirmButton: false,
            timer: 700
          })
        }
      })
    } catch (error) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: 'Sorry,' + error.message
      })
    }
  }
</script>