<body>
    <%- include('../userSide/includes/navbar') %>
        <div class="p-t-100 font-poppins ml-auto">
            <div class="wrapper wrapper--w780 mt-4 mb-0 px-5">
                <div class="card card-3">
                    <div class="card-body px-5 mb-0 ">
                        <div class="alert alert-danger mt-0 mb-2" style="display:none;" id="errmsg" role="alert">
                        </div>
                        <h2 class="title">Sign Up</h2>



                        <form method="post" action="/signup" name="validationform">

                            <div class="mb-0 input-group">
                                <input class=" input--style-3" type="text" placeholder="Full Name" name="name"
                                    onkeyup="onkey()" onkeydown="return /[a-z]/i.test(event.key)" id="nameid">

                            </div>
                            <p class="text-danger fw-light opacity-75" id="nameidwarning"></p>

                            <div class="mt-3 mb-0 input-group">
                                <input class="input--style-3 js-datepicker" type="email" placeholder="Email"
                                    name="email" id="EmailId" onkeyup="emailkey()" pattern="">
                            </div>

                            <p class="text-danger fw-light opacity-75" id="emailidwarning"></p>

                            <div class="mt-3 mb-0 input-group">
                                <input class="input--style-3 js-datepicker" type="phone" placeholder="Mobile Number"
                                    onkeypress="return isNumberKey(event)" onkeyup="mobilekey()" name="mobile"
                                    id="mobileID">
                            </div>

                            <p class="text-danger fw-light opacity-75" id="mobileidwarning"></p>

                            <div class="mt-3 mb-0 input-group">
                                <input class="input--style-3" type="password" onkeyup="passwordkey()"
                                    placeholder="Password" name="password" id="password1Id">
                            </div>

                            <p class="text-danger fw-light opacity-75" id="passwordidwarning"></p>

                            <div class="mt-3 mb-0 input-group">
                                <input class="input--style-3" type="password" placeholder="Confirm Password"
                                    onkeyup="confirmkey()" id="password2Id">
                            </div>

                            <p class="text-danger fw-light opacity-75" id="password2idwarning"></p>

                            <div class="mt-3 mb-0 p-t-10">
                                <button class="btn btn--pill btn--green" onclick="validatesignup()" type="submit">Sign
                                    Up</button>
                            </div>
                        </form>
                        <p class="pb-lg-2 mb-0 mt-3" style="color: rgb(157, 154, 154);">Already have an account
                            ? <a href="/login" style="color: #393f81;">Click here</a></p>


                    </div>

                </div>
            </div>
        </div>

        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
       
        <script>

            let name = document.getElementById('nameid'), email = document.getElementById('EmailId'), mobile = document.getElementById('mobileID');
            let password = document.getElementById('password1Id'), password2 = document.getElementById('password2Id'), namewarning = document.getElementById('nameidwarning');
            let emailwarning = document.getElementById('emailidwarning'), mobilewarning = document.getElementById('mobileidwarning');
            let passwordwarning = document.getElementById('passwordidwarning'), password2warning = document.getElementById('password2idwarning');
            function validatesignup() {

                namewarning.innerHTML = ""; emailwarning.innerHTML = ""; mobilewarning.innerHTML = "";
                passwordwarning.innerHTML = ""; password2warning.innerHTML = "";
                event.preventDefault();
                let form = event.target.form;
                let validation = true;

                if (name.value === "") {
                    namewarning.innerHTML = "Please enter your name"
                    validation = false
                } else if (name.value.length < 4 || name.value.length > 20) {
                    namewarning.innerHTML = "Please enter your full name"
                    validation = false
                }
                if (email.value === "") {
                    emailwarning.innerHTML = "Please enter your email id"
                    validation = false
                } else {
                    var validRegex = /^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;
                    if (!email.value.match(validRegex) || email.value.length > 20) {
                        emailwarning.innerHTML = "email id is not in valid format"
                        validation = false
                    } else {
                        let check = email.value.split("")
                        if (!isNaN(check[0])) {
                            emailwarning.innerHTML = "email id is not in valid format"
                            validation = false
                        }
                    }
                }
                if (mobile.value === "") {
                    mobilewarning.innerHTML = "Please enter your mobile number"
                    validation = false
                } else if (mobile.value.length != 10) {
                    mobilewarning.innerHTML = "Mobile number is not in valid format"
                    validation = false
                }

                if (password.value === "") {
                    passwordwarning.innerHTML = "Please enter a password"
                    validation = false
                } else if (password.value.length < 6 || password.value.length > 12) {
                    passwordwarning.innerHTML = "Password should be between 6 to 12 letters"
                    validation = false
                } else if (password2.value === "") {
                    password2warning.innerHTML = "Please confirm your password"
                    validation = false
                } else if (password.value != password2.value) {
                    password2warning.innerHTML = "Password confirmation is failed"
                    validation = false
                } if (validation) {
                    try {
                        axios.post('/signup', { email: email.value, mobile: mobile.value }).then((e) => {
                            if (!e.data.response) {
                                form.submit();
                            } else {
                                errmsg.style.display = "block"
                                document.getElementById("errmsg").innerHTML = e.data.response
                            }
                        })
                    } catch (error) {
                        console.log(error)
                    }
                }

            }

            function emailkey() {
                emailwarning.innerHTML = ""
            }

            function passwordkey() {
                passwordwarning.innerHTML = ""
            }
            function confirmkey() {
                password2warning.innerHTML = ""
            }
            function mobilekey() {
                mobilewarning.innerHTML = ""
            }

            function onkey() {
                namewarning.innerHTML = ""
            }
            function isNumberKey(evt) {
                var charCode = (evt.which) ? evt.which : evt.keyCode
                if (charCode > 31 && (charCode < 48 || charCode > 57))
                    return false;
                return true;
            }
        </script>



   

