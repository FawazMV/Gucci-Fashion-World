                                                    "items":4,
                                                    "nav": true,
                                                    "dots": false
                                                }
                                            }
                                        }'>
              <% for( let i = 0; i < similiar.length; i++ ) { %>
              <div class="product product-7 text-center">
                <figure class="product-media">
                  <!-- <span class="product-label label-top">Top</span> -->

                  <img src="<%= similiar[i].imagesDetails[0].Location %>" alt="Product image" class="product-image">


                  <div class="product-action-vertical">
                    <a onclick="addtoWishlist('<%= similiar[i]._id %>')" class="btn-product-icon btn-wishlist btn-expandable">
                      <span>add to wishlist</span></a>
                    <a href="/singelProduct/<%= similiar[i]._id %>" class="btn-product-icon btn-quickvieww" title="Quick view"><span>Quick view</span></a>
                    <!-- <a href="#" class="btn-product-icon btn-compare"
                                                title="Compare"><span>Compare</span></a> -->
                  </div><!-- End .product-action-vertical -->

                  <div class="product-action">
                    <a onclick="addtocart('<%= similiar[i]._id %>')" class="btn-product btn-cart"><span>add to cart</span></a>
                  </div><!-- End .product-action -->
                </figure><!-- End .product-media -->

                <div class="product-body">
                  <div class="product-cat">
                    <a href="/product/Men"><%= similiar[i].gender.gender %></a>
                  </div><!-- End .product-cat -->
                  <h3 class="product-title"><a href="/singelProduct/<%= similiar[i]._id %>"> <%= similiar[i].brandName.brandName %></a>
                  </h3><!-- End .product-title -->
                  <div class="product-price">
                    ₹<%= similiar[i].shopPrice %>.00
                  </div><!-- End .product-price -->
                  <div class="ratings-container">
                    <div class="ratings">
                      <div class="ratings-val" style="width: <%= similiar[i].rating/similiar[i].review %>%;"></div>
                      <!-- End .ratings-val -->
                    </div><!-- End .ratings -->
                    <span class="ratings-text">( <%= similiar[i].review %> Reviews )</span>
                  </div><!-- End .rating-container -->
                  <div class="product-nav product-nav-thums">
                    <% for( let k = 0; k < similiar[i].imagesDetails.length; k++ ) { %>
                    <a class="active">
                      <img class="p-2" style="max-height:70px;" src="<%= similiar[i].imagesDetails[k].Location %> " alt="product desc">
                    </a>
                    <% } %>
                  </div><!-- End .product-nav -->
                </div><!-- End .product-body -->
              </div><!-- End .product -->
              <% } %>
            </div><!-- End .owl-carousel -->
          </div><!-- End .container -->
        </div><!-- End .page-content -->
      </main><!-- End .main -->

    </div>
  </div>
</div>





