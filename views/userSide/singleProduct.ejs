<script>
  addtocart = (id) => {
    try {
      axios.post('/addCart', {
        id: id
      }).then((e) => {
        if (e.data.response === "login") location.href = "/login"
        else if (e.data.response) {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Sorry, ' + e.data.response
          })
        } else {
          Swal.fire({
            icon: 'success',
            title: 'Product added to cart',
            showConfirmButton: false,
            timer: 1500
          })
        }
      })
    } catch (error) {
      Swal.fire(
        'The Internet?',
        'That thing is still around?',
        'question'
      )
    }
  }




  addtoWishlist = (id) => {
    try {
      axios.put('/addWhishlist', {
        id: id
      }).then((e) => {
        if (e.data.response === "login") location.href = "/login"
        else if (e.data.response) {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Sorry, ' + e.data.response
          })
        } else {
          Swal.fire({
            position: 'top-end',
            icon: 'success',
            text: 'Product added to wishlist',
            showConfirmButton: false,
            timer: 1500
          })
        }
      })
    } catch (error) {
      Swal.fire(
        'The Internet?',
        'That thing is still around?',
        'question'
      )
    }
  }
</script>