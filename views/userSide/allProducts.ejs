    <script>
        addtocart = (id) => {
            try {
                axios.post('/addCart', { id: id }).then((e) => {
                    if (e.data.response === "login") location.href = "/login"
                    else if (e.data.response) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Sorry, ' + e.data.response
                        })
                    } else {
                        Swal.fire({
                            icon: 'success',
                            title: 'Product added to cart',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }
                })
            }
            catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Sorry,' + error.message
                })
            }
        }
    </script>


