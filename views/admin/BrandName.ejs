<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">

        <section class="p4-5">
            <div class="container px-5 table-responsive">


                <div style="width:30%;" class="mb-4 ml-auto">
                    <form action="/admin/addBrandName" method="post">
                        <button type="submit" class="btn btn-link float-end">Add</button>
                        <input type="text" name="brandName" class="form-control border border-black border-3"
                            placeholder="Add brand name here">
                    </form>
                </div>


                <table class=" mt-4 table table-striped table-bordered" id="example1" style="width:100%">
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Brand Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody class="">
                        <% for( let i=0; i < brandName.length; i ++ ) { %>

                            <tr>

                                <td class="pl-3 py-3">
                                    <%= i+1 %>
                                </td>

                                <td class="fw-bold py-3" id="">
                                    <%= brandName[i].brandName %>
                                </td>

                                <td class="d-flex">
                                    <!-- <a href=" " class="btn btn-primary mx-1 px-4 my-1">Edit</a> -->
                                    <button updatetype="" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                        class="btn btn-primary mx-1 px-4 my-1"
                                        onclick="editfunction('<%= brandName[i].brandName %>','<%= brandName[i]._id%>')">Edit</button>

                                    <form action="" method="">
                                        <button type="submit" onclick="archiveFunction('<%= brandName[i]._id %>')"
                                            class="btn btn-danger mx-1 my-1">Delete</button>
                                    </form>
                                </td>
                            </tr>

                            <% } %>


                    </tbody>
                </table>
            </div>


        </section>



    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Brand Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-4">
                <label for="gender">Brand Name</label>
                <input type="text" onkeyup="updateButton()" class="form-control" value="" name="gender"
                    id="brandNameee">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="" onclick="update()" disabled id="editbutton" class="btn btn-primary">Update</button>

                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
        archiveFunction = async (id) => {
            event.preventDefault(); // prevent form submit
            var form = event.target.form; // storing the form
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    try {
                        axios.post('/admin/deleteBrandName', { id: id }).then((e) => {
                            if (e.data.response) {
                                Swal.fire(
                                    {
                                        icon: 'success',
                                        title: 'Your file has been deleted.',
                                        showConfirmButton: false,
                                        timer: 3500
                                    }
                                )
                                form.submit();
                                location.href = '/admin/addBrandName';
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: 'The brand name is already in use !'
                                })
                            }
                        })
                    } catch (error) {
                        console.log(error)
                    }

                }
            })

        }

        let EditId;
        editfunction = (brand, Id) => {
            document.getElementById('brandNameee').value = brand
            EditId = Id
        }

        function updateButton() {
            document.querySelector('#editbutton').disabled = false;
        }
        update = () => {
            let brandName = document.getElementById('brandNameee').value
            try {
                axios.put('/admin/EditBrandName/', { id: EditId, brandName: brandName }).then((e) => {
                    if (e.data.response) {
                        Swal.fire(
                            {
                                icon: 'success',
                                title: 'Your file has been Updated.',
                                showConfirmButton: false,
                                timer: 3500
                            }
                        )
                        location.href = '/admin/addBrandName';


                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went worng. Try again!'
                        })
                    }
                })
            } catch (error) {
                console.log(error)
            }
        }



    </script>

