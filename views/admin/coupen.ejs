<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    
    addCoupen = async () => {
        
        const formData = new FormData(event.target);
        const formProps = await Object.fromEntries(formData);
        axios.post('/admin/addCoupen', formProps).then(() => {
            location.href = "/admin/coupen"
        })
    }
    coupen_status = (id) => {
        let value = document.getElementById('coupenstatusid' + id).value
        axios.patch('/admin/coupenStatus',{id:id,value:value}).then(()=>{
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 1000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            })

            Toast.fire({
                icon: 'success',
                title: 'Coupen status updated successfully'
            })
        })
    }

</script>



